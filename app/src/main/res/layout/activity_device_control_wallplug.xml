<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
              android:layout_width="match_parent"
              android:layout_height="match_parent"
              android:padding="16dp">

    <ImageView
        android:id="@+id/image_view_wall_plug_icon"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:src="@drawable/wallplug"/>

    <ImageButton
        android:id="@+id/image_button_wall_plug_settings"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentTop="true"
        android:layout_alignParentRight="true"
        android:src="@drawable/ic_settings_black_45dp"
        android:background="@null"/>

    <ImageButton
        android:id="@+id/button_device_control_wallplug_unregister"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/image_button_wall_plug_settings"
        android:layout_alignParentRight="true"
        android:src="@drawable/ic_delete_black_45dp"
        android:background="@null"/>

    <TextView
        android:id="@+id/text_view_wall_plug_control"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/image_view_wall_plug_icon"
        android:layout_marginTop="20dp"
        android:text="Wall plug Control, here you'll be able to control the selected device."/>

    <Button
        android:id="@+id/button_device_control_wallplug_turn_on"
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:layout_below="@id/text_view_wall_plug_control"
        android:layout_marginTop="16dp"
        android:text="On"
        android:textColor="#FFF"
        android:background="@drawable/shape_button_device_control"/>

    <Button
        android:id="@+id/button_device_control_wallplug_turn_off"
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:layout_below="@id/button_device_control_wallplug_turn_on"
        android:layout_marginTop="16dp"
        android:text="Off"
        android:textColor="#FFF"
        android:background="@drawable/shape_button_device_control"/>

</RelativeLayout>
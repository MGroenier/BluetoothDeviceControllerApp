<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="horizontal"
    android:layout_width="match_parent"
    android:layout_height="65dp"
    android:paddingTop="10dp"
    android:paddingBottom="10dp"
    android:background="#2b5291">

    <ImageView
        android:id="@+id/image_view_devices_list_item"
        android:layout_width="0dp"
        android:layout_weight="1"
        android:layout_height="fill_parent"
        android:src="@drawable/ic_bluetooth_white_24dp"/>

    <LinearLayout
        android:layout_width="0dp"
        android:layout_weight="4"
        android:orientation="vertical"
        android:layout_height="fill_parent">

        <TextView
            android:id="@+id/text_view_devices_list_item_name"
            android:layout_width="wrap_content"
            android:layout_height="0dp"
            android:layout_weight="1"
            android:text="[name unknown]"
            android:textColor="#FFF"/>

        <TextView
            android:id="@+id/text_view_devices_list_item_mac"
            android:layout_width="wrap_content"
            android:layout_height="0dp"
            android:layout_weight="1"
            android:text="[MAC-address unknown]"
            android:textColor="#FFF"/>

    </LinearLayout>

</LinearLayout>